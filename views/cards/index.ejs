<%- include('../partials/header') %>

<table id="list">
    <thead>
      <tr>
        <th>Title</th>
        <th>Release<br>Year</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% if(cards) { %>
      <% cards.forEach(function(c) { %>
        <tr>
          <td><%= c.name %></td>
          <td><%= c.type %></td>
        <%  if (c.type === "Monster") { %>
          <td><%= c.level %></td>
          <td><%= c.attribute %></td>
          <td><%= c.monsterType %></td>
          <td><%= c.atk %></td>
          <td><%= c.def %></td>
          <% } %>
          <% if (c.type === "Trap") { %>
          <td><%= c.trapType %></td>
          <% } else if (c.type === "Spell") { %>
          <td><%= c.spellType %></td>
          <% } %>
          <td><%= c.effect %></td>
          <td><%= c.releaseYear %></td>
          <td><a href="/cards/<%= c._id %>">DETAILS</a></td>
        </tr>
        <% }); %>
        <% } %>
      </tbody>
    </table>

<%- include('../partials/footer') %>