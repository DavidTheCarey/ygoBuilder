<%- include('../../partials/header') %>

<form id="new-form" action="/cards" method="POST">
  <label>Name:</label>
  <input type="text" name="name" maxlength="42" required>
  <br>
  <label>Type:</label>
  <select name="type">
    <option value="Trap">Trap</option>
  </select>
  <br>
  <label>Trap Type:</label>
  <select name="trapType">
    <option value="Normal">Normal</option>
    <option value="Continuous">Continuous</option>
    <option value="Counter">Counter</option>
  </select>
  <br>
  <label>Effect:</label>
  <textarea type="text" name="effect" maxlength="500" rows="8" cols="45"></textarea>
  <input type="submit" class="enterInfo" value="Create Card">
</form>

<%- include('../../partials/footer') %>