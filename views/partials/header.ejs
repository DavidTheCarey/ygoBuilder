      <a href="/cards/new" <%- title === 'Add Card' ? 'class="active"' : '' %>>ADD CARD</a>
      <a href="/logout">LOG OUT</a>
    <% } else { %>
      <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
    <% } %>
  </nav>
  <main>
    <h1 style="color: white; font-family: 'PT Serif', serif; margin-left: 30px;"><%= title %></h1>